{
  "name": "midgram-offline",
  "version": "0.1.3",
  "private": true,
  "description": "Midgram Offline",
  "author": "Elhareth <elhareth0609@gmail.com>",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "build:mainpreload": "echo \"Using existing JS files in electron/ folder\"",
    "electron:dev": "npm run build:electron && concurrently \"vite\" \"wait-on tcp:3000 && electron .\"",
    "watch:electron": "vite build --mode development --watch --config vite.config.ts && electron .",
    "build:electron": "vite build --mode production",
    "electron:build": "npm run build:electron && electron-builder",
    "pack": "electron-builder --dir",
    "dev:trial": "cross-env APP_MODE=trial concurrently \"vite\" \"wait-on tcp:3000 && electron .\"",
    "dev:full": "cross-env APP_MODE=full concurrently \"vite\" \"wait-on tcp:3000 && electron .\"",
    "dist:full": "cross-env APP_MODE=full npm run build:electron && electron-builder",
    "dist:trial": "cross-env APP_MODE=trial npm run build:electron && electron-builder",
    "rebuild": "electron-rebuild"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.13.0",
    "@genkit-ai/next": "^1.13.0",
    "@hookform/resolvers": "^4.1.3",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@zxing/library": "^0.21.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "dotenv": "^16.5.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^6.6.2",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "firebase": "^12.0.0",
    "genkit": "^1.13.0",
    "genkitx-openai": "^0.23.0",
    "jsbarcode": "^3.11.6",
    "lucide-react": "^0.475.0",
    "next-themes": "^0.3.0",
    "openai": "^4.52.7",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^6.22.3",
    "react-to-print": "^2.15.1",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jsbarcode": "^3.11.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "genkit-cli": "^1.13.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vite": "^5.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.midgram.midgram-offline",
    "productName": "Midgram Offline",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist/assets/**/*",
      "dist/icons/**/*",
      "dist/landing/**/*",
      "electron/**/*",
      "public/**/*",
      ".env"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "elhareth0609",
        "repo": "Seha-Pos-Offline"
      }
    ]
  }
}